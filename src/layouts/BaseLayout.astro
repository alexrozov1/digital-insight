---
const { title = "Digital Insight", description = "News, cases, and resources in digital analytics." } = Astro.props;
---
<html lang="en" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-gradient-to-b from-zinc-50 to-white dark:from-zinc-950 dark:to-zinc-900 text-zinc-900 dark:text-zinc-50">
    <header class="sticky top-0 z-40 backdrop-blur bg-white/70 dark:bg-zinc-950/70 border-b border-zinc-200 dark:border-zinc-800">
      <div class="container mx-auto px-4 md:px-6 lg:px-8 h-16 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <div class="h-8 w-8 rounded-xl bg-zinc-900 dark:bg-zinc-100" />
          <span class="font-semibold tracking-tight">Digital Insight</span>
        </a>
        <nav class="hidden md:flex items-center gap-6 text-sm text-zinc-700 dark:text-zinc-300">
          <a href="/news" class="hover:underline">News</a>
          <a href="/cases" class="hover:underline">Cases</a>
          <a href="/guides" class="hover:underline">Guides</a>
          <a href="/resources" class="hover:underline">Resources</a>
          <a href="/search" class="hover:underline">Search</a>
        </nav>
        <div class="flex items-center gap-2">
          <button id="theme-toggle" class="rounded-2xl px-3 py-2 text-sm font-medium shadow-sm hover:shadow bg-zinc-900 text-white dark:bg-zinc-100 dark:text-zinc-900" aria-label="Toggle theme">Theme</button>
        </div>
      </div>
    </header>
    <main class="pb-10">
      <slot />
    </main>
    <footer class="border-t border-zinc-200 dark:border-zinc-800">
      <div class="container mx-auto px-4 md:px-6 lg:px-8 py-10 text-sm text-zinc-600 dark:text-zinc-300 flex flex-col md:flex-row items-center justify-between gap-4">
        <div>© {new Date().getFullYear()} Digital Insight — Astro + Tailwind.</div>
        <div class="flex items-center gap-4">
          <a href="/rss.xml" class="hover:underline">RSS</a>
          <a href="/sitemap-index.xml" class="hover:underline">Sitemap</a>
          <a href="/privacy" class="hover:underline">Privacy</a>
        </div>
      </div>
    </footer>
    <script>
      const root = document.documentElement;
      const btn = document.getElementById('theme-toggle');
      const apply = (v) => v ? root.classList.add('dark') : root.classList.remove('dark');
      let pref = window.matchMedia('(prefers-color-scheme: dark)').matches;
      apply(pref);
      btn?.addEventListener('click', () => { pref = !root.classList.contains('dark'); apply(pref); });
    </script>
  </body>
</html>
